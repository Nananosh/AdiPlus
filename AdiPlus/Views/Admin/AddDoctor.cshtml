@model AdiPlus.ViewModels.Admin.RegisterDoctorViewModel

<form class="form-group" method="post" asp-controller="Admin" asp-action="AddDoctor">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label>Почта</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="Email" placeholder="Введите почту">
    </div>
    <div class="form-group">
        <label>Имя пользователя</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="UserName" placeholder="Введите имя пользователя">
    </div>
    <div class="form-group">
        <label>Пароль</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="Password" placeholder="Введите пароль">
    </div>
    <div class="form-group">
        <label>Имя</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="Name" placeholder="Введите имя">
    </div>
    <div class="form-group">
        <label>Фамилия</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="Surname" placeholder="Введите фамилию">
    </div>
    <div class="form-group">
        <label>Отчество</label>
        <input class="form-control shadow-sm bg-white rounded" asp-for="LastName" placeholder="Введите отчество">
    </div>
    <div class="form-group">
        <label>Специальность</label>
        <input id="specialization" style="width: 40%;" class="form-control shadow-sm bg-white rounded" asp-for="SpecializationId">
    </div>
    <div class="form-group">
        <label>Кабинет</label>
        <input id="cabinet" style="width: 40%;" class="form-control shadow-sm bg-white rounded" asp-for="CabinetId">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block shadow-sm rounded">Добавить</button>
    </div>
</form>

<script>
$("#specialization").kendoDropDownList({
        dataTextField: "specializationName",
        dataValueField: "id",
        optionLabel: "Выберите специальность...",
        height: 500,
        dataSource: {
            transport: {
                read: {
                    url: "@Url.Action("GetAllSpecialization", "Admin")",
                    dataType: "json",
                    cache: false
                }
            }
        }
    });
$("#cabinet").kendoDropDownList({
        dataTextField: "cabinetNumber",
        dataValueField: "id",
        optionLabel: "Выберите номер кабинета...",
        height: 500,
        dataSource: {
            transport: {
                read: {
                    url: "@Url.Action("GetAllCabinet", "Admin")",
                    dataType: "json",
                    cache: false
                }
            }
        }
    });
</script>